    <section>
        <div class="titleImage">
            <img src="~/LogoTECHSPO.png" height="60" width="300" style="display: block; margin: 0 auto;" />
        </div>
    </section>
    <main>
        <section class="Layout">
            <div class="left">
                <div class="ThirdOfPage">
                    <h2>
                        More about Us
                    </h2>
                    <a href="@Url.Action("About", "Home")">
                        <img src="https://e1.pxfuel.com/desktop-wallpaper/634/471/desktop-wallpaper-motherboard-black-and-white-motherboards-lines.jpg" height="400" width="400" alt="Alternate Text" />
                    </a>
                   
                </div>
            </div>
        </section>

        <section class="Layout">
            <div class="middle">
                <div class="ThirdOfPage">
                    <h2> Members Only</h2>
                    <a href="@Url.Action("Login", "Account")">
                        <img src="https://images.pexels.com/photos/3094799/pexels-photo-3094799.jpeg?auto=compress&cs=tinysrgb&w=1600" height="400" width="400" alt="Alternate Text" />
                    </a>
                </div>
            </div>
        </section>

        <section class="Layout">
            <div class="right">
                <div class="ThirdOfPage">
                    <h2> Contact us </h2>
                    <a href="@Url.Action("Contact", "Home")">
                        <img src="https://media.istockphoto.com/id/1325084682/photo/hand-holding-mobile-phone-blue-light-effect-on-black-background.jpg?s=612x612&w=0&k=20&c=B94ktEQc49p0U8MaGY-o9-G9kSLixrPrsM1O3-1iKBs=" height="400" width="400" alt="Alternate Text" />                    </a>
                </div>
            </div>
