<canvas id="backgroundCanvas"></canvas>
<head>

    <style>
        main {
    display: flex;
}


    .Layout {
    flex: 0 0 calc(33.33% - 0px);
    margin-top: 1vh;
    box-sizing: border-box;
    overflow: hidden;
    transition: transform 3s ease;
    text-align: center;
    }

        Title.h1, h2 {

            color: #009688;
            font-family: 'Times New Roman'
        }


    .Title {
    flex: 10 10 calc(100% - 10px);
    text-align: center;
    animation: glow 3s infinite;
    }

    .ThirdOfPage {
    padding: 20px;
    transition: transform 2s ease, margin 2s ease;
    }

    .left {
    background: linear-gradient(to right, rgb(30, 30, 30), rgb(20, 20, 20), rgb(15, 15, 15));
    transition: transform 2s ease;
    position: relative;
    }

    .middle {
    background: linear-gradient(to left,rgb(15, 15, 15), rgb(0, 0, 0),rgb(15, 15, 15));
    transition: transform 2s ease;
    position: relative;
    }

    .right {
    background: linear-gradient(to left, rgb(30, 30, 30), rgb(20, 20, 20), rgb(15, 15, 15));
    transition: transform 2s ease;
    position: relative;
    }

    .left:hover, .middle:hover, .right:hover {
        transform: scale(1.1);
        z-index: 1;
    }



#backgroundCanvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("https://images.pexels.com/photos/1694000/pexels-photo-1694000.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1");
    background-repeat: no-repeat;
    background-position-y: 100%;
    background-position: center;
    background-size: cover;
    z-index: -1;
}

 titleImage{
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
footer{
    color:white;
}
    </style>
</head>
