@model IEnumerable<EmsWebApplication.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Reviews</title>
    <!-- include necessary CSS files -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .checked {
            color: orange;
        }
        /* 4IR Theme */
        body {
            font-family: 'Times New Roman';
            background-color: #ff6a00;
            background-image: url('https://ippr.org.na/wp-content/uploads/2021/11/106790792_l-1024x576.jpg');
            background-size: cover; /* Adjust the image size to cover the entire element */
            color: #333;
        }

        h2 {
            color: #009688; /* Teal color for the title */
            font-family:'Times New Roman'
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #00726a;
            border: 1px solid #ddd;
            margin: 10px 0;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-family:
        }

        th {
            background-color: #009688; /* Teal color for table headers */
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .checked {
            color: orange;
        }

        /* Style links */
        a {
            color: #009688; /* Teal color for links */
            text-decoration: none;
            margin-right: 10px;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Add a border and padding to action links */
        .action-link {
            border: 1px solid #009688; /* Teal color for link borders */
            padding: 5px 10px;
            margin-right: 10px;
            text-align: center;
            display: inline-block;
            color: #009688; /* Teal color for link text */
            text-decoration: none;
            border-radius: 5px;
        }

            .action-link:hover {
                background-color: #009688; /* Teal color for link background on hover */
                color: #fff;
            }

        /* Style the Create New link */
        .create-link {
            background-color: #009688; /* Teal color for background */
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 5px;
            margin-top: 10px;
        }

            .create-link:hover {
                background-color: #00726a; /* Darker teal color on hover */
            }

        /* Additional styles can be added as needed for specific elements */

    </style>
</head>
<body>
    <h2>Reviews</h2>
    @if (User.Identity.Name == "Admin@test.com")
    {
        <p> @Html.ActionLink("Create New", "Create")</p>
    }
        <table class="table">
            <tr>
                <th>User Review</th>
                <th>Rating</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserReview)</td>
                    <td>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= item.Rating)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                            else
                            {
                                <span class="fa fa-star"></span>
                            }
                        }
                    </td>
                    @*only show the links if The signed in email is Admin@test.com*@
                    @if (User.Identity.Name == "Admin@test.com")
                    {


                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id.ToString() })
                        </td>
                    }
                </tr>
            }
        </table>
    </body>
</html>
