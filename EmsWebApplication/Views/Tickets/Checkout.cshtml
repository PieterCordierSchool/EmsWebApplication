@model EmsWebApplication.Models.CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Replace with your layout if applicable
}

<h2>Checkout</h2>

@using (Html.BeginForm("ProcessCheckout", "Tickets", FormMethod.Post))
{
    <!-- Shipping Information -->
    <h3>Shipping Information</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.ShippingAddress)
        @Html.TextBoxFor(model => model.ShippingAddress, new { @class = "form-control" })
    </div>

    <!-- Billing Information -->
    <h3>Billing Information</h3>
    <div class="form-group">
        @Html.LabelFor(model => model.BillingAddress)
        @Html.TextBoxFor(model => model.BillingAddress, new { @class = "form-control" })
    </div>

    <!-- Order Summary -->
    <h3>Order Summary</h3>
    <div>
        <!-- Check if the model.CartItems is not null -->
        @if (Model.CartItems != null && Model.CartItems.Any())
        {
            foreach (var item in Model.CartItems)
            {
                <p>@item.EventName - $@item.TotalPrice</p>
            }
        }
        else
        {
            <p>No items in the cart.</p>
        }
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Place Order</button>
    </div>
}
